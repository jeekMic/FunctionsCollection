<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MyDownloadThread">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_1">
        <ProgressBar
            android:id="@+id/main_progress1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
            android:id="@+id/main_button_down1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载1"/>
        <Button
            android:id="@+id/main_button_cancel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消1"/>
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_2"
        app:layout_constraintTop_toBottomOf="@+id/ll_1">
        <ProgressBar
            android:id="@+id/main_progress2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
            android:id="@+id/main_button_down2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载2"/>
        <Button
            android:id="@+id/main_button_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消2"/>

    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_3"
        app:layout_constraintTop_toBottomOf="@+id/ll_2">
        <ProgressBar
            android:id="@+id/main_progress3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        <Button
            android:id="@+id/main_button_down3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下载3"/>
        <Button
            android:id="@+id/main_button_cancel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消3"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>